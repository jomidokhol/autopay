<?xml version='1.0' encoding='utf-8'?>
<widget id="com.autopay.api" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>Auto Pay</name>
    <description>SMS Collector Service</description>
    <author email="dev@autopay.com">Developer Nur</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <platform name="android">
        <preference name="KeepRunning" value="true" />
        <preference name="AndroidXEnabled" value="true" />
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.RECEIVE_SMS" />
            <uses-permission android:name="android.permission.READ_SMS" />
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
            <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
        </config-file>
    </platform>

    <plugin name="cordova-plugin-sms-receiver" spec="^1.1.1" />
    <plugin name="cordova-plugin-background-mode" spec="^0.7.3" />
    <plugin name="cordova-plugin-device" spec="^2.1.0" />
    <plugin name="cordova-plugin-ignore-battery-optimizations" spec="^1.0.0" />
</widget>
